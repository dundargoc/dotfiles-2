[user]
    name = Mathias Fussenegger
    email = f.mathias@zignar.net

[core]
    editor = vim
    autocrlf = input
    excludesfile = ~/.gitignore

[color]
    diff = auto
    status = auto
    branch = auto
    ui = true

[github]
    user = mfussenegger

[push]
    default = current

[merge]
    tool = gvimdiff

[mergetool]
    keepBackup = false

[diff]
    tool = vimdiff

[alias]
    lg = log --color --graph \
        --pretty=format:'%Cred%h%Creset -%C(yellow)%d%Creset %s %Cgreen(%cr) %C(bold blue)<%an>%Creset' \
        --abbrev-commit --
    killbranches = !git branch --merged | grep -v '^*' \
                   | grep -v master | xargs git branch -d 2> /dev/null
    ls = ls-files
    wtf = !$ZSH/bin/git-wtf
    up = !$ZSH/bin/git-up

[instaweb]
    httpd = webrick
