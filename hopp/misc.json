[
    {
        "location": "/tmp/",
        "curl": "https://github.com/github/hub/releases/download/v2.3.0-pre10/hub-linux-amd64-2.3.0-pre10.tgz",
        "cmds": [
            "tar xvzf /tmp/hub-linux-*.tgz -C ~/bin/ --wildcards 'hub-linux-*/bin/hub' --strip 2 --transform 's/hub/gh/g'",
            "rm -rf /tmp/hub-linux-*.tgz"
        ]
    },
    {
        "location": "~/bin/",
        "curl": "https://raw.githubusercontent.com/Russell91/sshrc/master/sshrc",
        "cmds": [
            "chmod +x ~/bin/sshrc"
        ]
    },
    {
        "virtualenv": ["i3pystatus", "psutil", "netifaces", "colour", "basiciw"],
        "location": "~/.virtualenvs/i3pystatus"
    },
    {
        "virtualenv": [
            "httpie",
            "crash",
            "twine",
            "pypsh",
            "pex",
            "wheel",
            "randrctl",
            "vdirsyncer",
            "khard"
        ],
        "location": "~/.virtualenvs/tools",
        "cmds": [
            "ln -sf ~/.virtualenvs/tools/bin/http ~/bin/http",
            "ln -sf ~/.virtualenvs/tools/bin/crash ~/bin/crash",
            "ln -sf ~/.virtualenvs/tools/bin/twine ~/bin/twine",
            "ln -sf ~/.virtualenvs/tools/bin/pypsh ~/bin/pypsh",
            "ln -sf ~/.virtualenvs/tools/bin/pex ~/bin/pex",
            "ln -sf ~/.virtualenvs/tools/bin/randrctl ~/bin/randrctl",
            "ln -sf ~/.virtualenvs/tools/bin/vdirsyncer ~/bin/vdirsyncer",
            "ln -sf ~/.virtualenvs/tools/bin/khard ~/bin/khard"
        ]
    }
]
