[
    {
        "location": "/tmp/",
        "curl": "https://github.com/github/hub/releases/download/v2.4.0/hub-linux-amd64-2.4.0.tgz",
        "cmds": [
            "tar xvzf /tmp/hub-linux-*.tgz -C ~/bin/ --wildcards 'hub-linux-*/bin/hub' --strip 2 --transform 's/hub/gh/g'",
            "rm -rf /tmp/hub-linux-*.tgz"
        ]
    },
    {
        "location": "~/bin/",
        "curl": "https://raw.githubusercontent.com/Russell91/sshrc/master/sshrc",
        "cmds": [
            "chmod +x ~/bin/sshrc"
        ]
    },
    {
        "virtualenv": ["i3pystatus", "psutil", "netifaces", "colour", "basiciw"],
        "location": "~/.virtualenvs/i3pystatus"
    },
    {
        "virtualenv": [
            "httpie",
            "twine",
            "shiv",
            "wheel",
            "randrctl",
            "vdirsyncer",
            "khard",
            "yamllint"
        ],
        "location": "~/.virtualenvs/tools",
        "cmds": [
            "ln -sf ~/.virtualenvs/tools/bin/http ~/bin/http",
            "ln -sf ~/.virtualenvs/tools/bin/twine ~/bin/twine",
            "ln -sf ~/.virtualenvs/tools/bin/shiv ~/bin/shiv",
            "ln -sf ~/.virtualenvs/tools/bin/randrctl ~/bin/randrctl",
            "ln -sf ~/.virtualenvs/tools/bin/vdirsyncer ~/bin/vdirsyncer",
            "ln -sf ~/.virtualenvs/tools/bin/khard ~/bin/khard",
            "ln -sf ~/.virtualenvs/tools/bin/yamllint ~/bin/yamllint"
        ]
    },
    {
        "location": "~/.local/share/npm_tools",
        "npm": [
            "bash-language-server"
        ],
        "cmds": [
            "ln -sf ~/.local/share/npm_tools/node_modules/bash-language-server/bin/main.js ~/bin/bash-language-server"
        ]
    },
    {
      "location": "~/bin/hadolint",
      "curl": "https://github.com/hadolint/hadolint/releases/download/v1.10.2/hadolint-Linux-x86_64",
      "cmds": [
        "chmod +x ~/bin/hadolint"
      ]
    }
]
